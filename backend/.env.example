# =====================================================
# K-Jarvis Agent Orchestrator - Environment Configuration
# =====================================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# =====================================================
# LLM Provider Configuration
# =====================================================
# Options: "openai", "azure", "claude", or "gemini"
# The system will use the specified provider
# If not available, it will fallback to other providers
LLM_PROVIDER=openai

# Common LLM Settings
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096

# -----------------------------------------------------
# OpenAI Configuration (LLM_PROVIDER=openai)
# -----------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
# Available models: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo

# -----------------------------------------------------
# Azure OpenAI Configuration (LLM_PROVIDER=azure)
# -----------------------------------------------------
AZURE_OPENAI_API_KEY=your-azure-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# -----------------------------------------------------
# Anthropic Claude Configuration (LLM_PROVIDER=claude)
# -----------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
CLAUDE_MODEL=claude-sonnet-4-20250514
# Available models: claude-sonnet-4-20250514 (latest), claude-3-5-sonnet-20241022, claude-3-opus-20240229

# -----------------------------------------------------
# Google Gemini Configuration (LLM_PROVIDER=gemini)
# -----------------------------------------------------
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_MODEL=gemini-2.5-flash
# Available models: gemini-2.5-flash (latest), gemini-2.0-flash, gemini-1.5-pro

# =====================================================
# Database Configuration (PostgreSQL)
# =====================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kjarvis
DB_USER=postgres
DB_PASSWORD=your-db-password

# =====================================================
# Redis Configuration (Optional, for caching)
# =====================================================
REDIS_URL=redis://localhost:6379/0

# =====================================================
# Authentication (JWT)
# =====================================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =====================================================
# K-Auth Integration (SSO)
# =====================================================
KAUTH_URL=http://localhost:4002
KAUTH_CLIENT_ID=your-kauth-client-id
KAUTH_CLIENT_SECRET=your-kauth-client-secret

# =====================================================
# MCPHub/K-ARC Integration
# =====================================================
MCPHUB_URL=http://localhost:3000

# =====================================================
# Server Configuration
# =====================================================
HOST=0.0.0.0
PORT=4001
LOG_LEVEL=INFO

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:4000,http://localhost:3000,http://localhost:5173

# =====================================================
# Optional: OpenTelemetry
# =====================================================
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
